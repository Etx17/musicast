<%= simple_form_for(@free_choice_air) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :free_choice, label: t('free_choice_airs.form.free_choice') %>
    <%= f.association :air, label: t('free_choice_airs.form.air') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('free_choice_airs.form.submit') %>
  </div>
<% end %>
