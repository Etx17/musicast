<div class="nested-fields education-fields mb-3 p-3 border rounded bg-light position-relative shadow-sm" data-new-record="<%= f.object.new_record? %>">
  <div class="d-flex justify-content-between align-items-start">
    <div class="col-md-8">
      <%= f.input :title,
            label: t('activerecord.attributes.education.title'),
            placeholder: t('simple_form.placeholders.education.title'),
            input_html: { class: 'form-control form-control-sm' } %>
      <%= f.input :english_title,
            label: t('activerecord.attributes.education.english_title'),
            placeholder: t('simple_form.placeholders.education.english_title'),
            input_html: { class: 'form-control form-control-sm' } %>
    </div>
    <div class="col-auto pt-4 mt-2">
      <button type="button"
              data-action="click->educations#removeEducation"
              data-confirm-message="<%= t('candidats.form.confirm_remove_education', default: 'Are you sure you want to remove this education entry? It will be deleted when you save.') %>"
              class="text-primary btn btn-light  p-2 text-primary"
              title="<%= t('global.actions.remove') %>">
        <i class="fas fa-trash-alt"></i>
      </button>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
  <div class="row g-3 mb-2">
    <div class="col-md-6 col-12">
      <%= f.input :start_date,
            as: :date,
            html5: true,
            label: t('activerecord.attributes.education.start_date'),
            input_html: { class: 'form-control form-control-sm' } %>
    </div>
    <div class="col-md-6 col-12">
      <%= f.input :end_date,
            as: :date,
            html5: true,
            label: t('activerecord.attributes.education.end_date'),
            input_html: { class: 'form-control form-control-sm' } %>
    </div>
  </div>

  <div class="row g-3 mb-2">
    <div class="col-12">
      <%= f.input :logo,
            as: :file,
            label: t('activerecord.attributes.education.logo'), # Add label
            input_html: { class: 'form-control form-control-sm' } %>
      <%# Display current logo filename if editing and logo exists %>
      <% if f.object.persisted? && f.object.logo.attached? %>
         <small class="text-muted d-block mt-1"><%= t('activerecord.attributes.education.current_logo') %>: <%= f.object.logo.filename %></small>
      <% end %>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-12">
      <%= f.input :description,
            label: t('activerecord.attributes.education.description'),
            placeholder: t('simple_form.placeholders.education.description'),
            as: :text,
            input_html: { rows: 2, class: 'form-control form-control-sm' } %>
      <%= f.input :english_description,
            label: t('activerecord.attributes.education.english_description'),
            placeholder: t('simple_form.placeholders.education.english_description'),
            as: :text,
            input_html: { rows: 2, class: 'form-control form-control-sm' } %>
    </div>
  </div>
</div>
