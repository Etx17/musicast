<div class="p-3 bg-white rounded-4 d-flex flex-column border mt-3">
  <div class="d-flex justify-content-start align-items-start gap-3 mb-3">
    <h2><%= t('candidats.education_section.title') %></h2>
    <%= link_to edit_candidat_path(@candidat, anchor: 'education-form-section'), class:"btn btn-light rounded-circle p-0 text-primary" do %>
      <i class="fas fa-edit p-2" ></i>
    <% end %>
  </div>
  <% if @candidat.educations.none? %>
    <p class="text-muted"><%= t('candidats.education_section.no_education') %></p>
  <% end %>
  <ul class="list-unstyled">
    <% @candidat.educations.each do |education| %>
      <li class="mb-3">
        <div class="d-flex align-items-between">
          <div class="d-flex w-100">
            <% if education.logo.attached? %>
              <%= image_tag education.logo, class: "me-3 rounded", style: "width: 50px; height: 50px; object-fit: cover;" %>
            <% else %>
              <img src="https://placehold.co/50x50" alt="Experience placeholder" class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
            <% end %>
            <div>
              <h3 class="font-semibold mb-0"><%= education.title %></h3>
              <p class="text-muted m-0"><%= education.description %></p>
              <p class="text-muted m-0"><%= education.start_date&.strftime('%b %Y') %> - <%= education.end_date.present? ? education.end_date&.strftime('%b %Y') : t('candidats.education_section.present') %></p>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

</div>
