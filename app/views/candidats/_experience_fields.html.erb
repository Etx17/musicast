
<div class="nested-fields row border shadow my-3 px-3 pt-2" data-new-record="<%= f.object.new_record? %>">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h2><i class="fas fa-music text-gradient"></i> #<%= f.index.is_a?(Integer) ? f.index + 1 : 'NEW' %></h2>
      <% if f.object.new_record? %>
        <%= link_to '#', data: { action: 'removeExperience' }, class: 'btn btn-primary' do %>
          <i class="fas fa-trash pe-2"></i>Supprimer
        <% end %>
      <% end %>
    </div>
  </div>
  <%= f.input :title %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :description %>
</div>
