<%= simple_form_for(@partner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :organism %>
    <%= f.input :role_partenaire, label: t('partners.form.partner_role') %>
    <%= f.input :niveau_autorisation, label: t('partners.form.authorization_level') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('global.actions.submit') %>
  </div>
<% end %>
