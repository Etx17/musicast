<%= simple_form_for(@free_choice) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :programme_requirement, label: t('free_choices.form.programme_requirement') %>
    <%= f.input :number, label: t('free_choices.form.number') %>
    <%= f.input :max_length_minutes, label: t('free_choices.form.max_length_minutes') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('free_choices.form.submit') %>
  </div>
<% end %>
