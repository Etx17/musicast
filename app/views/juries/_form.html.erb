<div class="row">
  <div class="col-6">
    <%= simple_form_for(@jury) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :short_bio %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('juries.form.update'), class:"btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>
