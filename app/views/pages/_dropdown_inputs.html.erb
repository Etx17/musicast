<div class="d-flex container justify-content-center mt-4 gap-3">
  <%= form_tag(request.path, method: :get) do %>
    <div class="d-flex container justify-content-center mt-4 gap-3">
<%= select_tag :discipline, options_for_select(Category.disciplines.map { |name, id| [name.humanize, id] }, session[:discipline]), class: "form-control rounded-md border-gray-300", prompt: "Discipline" %>
      <%= country_select :country, :country, { prompt: "Country", selected: session[:country] }, { class: "form-control rounded-md border-gray-300" } %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
