<div class=" mt-5 row justify-content-center align-items-center">
<div class="col-8 col-sm-6 shadow p-3 bg-white rounded-8" style="background: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.9)), url(<%= asset_path 'garnier.jpg' %>) no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
<h2><%= t('devise.registrations.new.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :inscription_role, label: t('devise.registrations.new.role'), collection: User.inscription_roles.keys.reject { |role| %w[jury partner].include? role }.map { |role| [role.humanize, role] } %>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: t('devise.registrations.new.password'),
                hint: (t('devise.registrations.new.characters_minimum', count: @minimum_password_length) if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: t('devise.registrations.new.password_confirmation'),
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <div class="d-flex align-items-start gap-2">
      <%= f.check_box :accepted_terms, required: true, class: "mt-1" %>
      <%= f.label :accepted_terms, required: true, class:"text-secondary"  do %>
        <span class="text-danger">*</span> <%= t('devise.registrations.new.terms_agreement_html', terms_link: link_to(t('devise.registrations.new.terms_of_use'), pages_terms_of_use_path), privacy_link: link_to(t('devise.registrations.new.privacy_policy'), pages_privacy_policy_path)) %>
      <% end %>
    </div>

    <div class="d-flex align-items-start gap-2">
      <%= f.check_box :accepts_newsletter, class: "mt-1" %>
      <%= f.label :accepts_newsletter, class:"text-secondary"  do %>
        <span>*</span> <%= t('devise.registrations.new.newsletter_agreement') %>
      <% end %>
    </div>

  </div>

  <div class="form-actions d-flex flex-column justify-content-center align-items-center my-3">
    <%= f.button :submit, t('devise.registrations.new.create'), class: "btn btn-dark text-light w-50" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
