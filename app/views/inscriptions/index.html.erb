<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Candidatures</h1>

<div id="inscriptions" class="row">
  <% Inscription.statuses.keys.each do |status| %>
    <div class="col bg-light shadow-sm" style="border-radius: 0.25rem;">
      <h5 class="text-center text-capitalize"><%= status %></h5>
      <% @inscriptions&.select { |inscription| inscription.status == status }.each do |inscription| %>
        <div class="card p-3">
          <%= link_to inscription_path(inscription) do %>
            <div>
              <h6 class="card-title"><%= inscription.candidat.user.email %></h6>
              <span class="badge rounded-pill bg-secondary"><%= inscription.category.name %></span>
              <p class="card-text mb-0">
                <span class="badge rounded-pill bg-secondary"><%= inscription.status %></span>
              </p>

            </div>
          <% end %>
          <div class="d-flex justify-content-around">
            <%= buttons_for_inscription(inscription).html_safe %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


</div>
