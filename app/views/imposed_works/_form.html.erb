<%= simple_form_for([@organism, @competition, @edition_competition, @category, @imposed_work], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.hidden_field :category, value: @imposed_work.category, disabled: true %>

  <div class="form-inputs">
    <div class="bg-light border p-3 mb-5" style="border-radius: 10px;">
      <%= f.input :title, required: true,
                  placeholder: t('imposed_works.form.title_placeholder'),
                  label_html: { class: '' },
                  input_html: { class: 'p-2 border' },
                  label: '<i class="fas fa-book text-secondary"></i> '.html_safe + t('imposed_works.common.title') %>

      <%= f.input :guidelines, required: true,
                  placeholder: t('imposed_works.form.guidelines_placeholder'),
                  label_html: { class: '' },
                  input_html: { class: 'p-2 border' },
                  label: '<i class="fas fa-info-circle text-secondary"></i> '.html_safe + t('imposed_works.common.guidelines') %>
    </div>
    <h4 class="text-center mb-5"><%= t('imposed_works.common.airs') %></h4>

    <div data-controller="airs">
      <div data-airs-target="container" class="bg-white">
        <%= f.simple_fields_for :airs do |air| %>
          <%= render 'shared/air_fields', f: air %>
        <% end %>
      </div>

      <div data-airs-target="template" style="display: none">
        <%= f.simple_fields_for :airs, Air.new, child_index: 'NEW_RECORD' do |air| %>
          <%= render 'shared/air_fields', f: air %>
        <% end %>
      </div>

      <div class="d-flex gap-3 justify-content-center">
        <%= link_to '#', data: { action: 'airs#addAir' }, class: 'px-2 btn btn-dark mb-5' do %>
          <i class="fas fa-plus"></i> <%= t('imposed_works.common.actions.add_piece') %>
        <% end %>

        <%= button_tag(type: 'submit', class: 'px-2 btn btn-dark mb-5') do %>
          <i class="fa-solid fa-floppy-disk"></i> <%= t('imposed_works.common.actions.submit') %>
        <% end %>
      </div>
    </div>
  </div>


<% end %>
