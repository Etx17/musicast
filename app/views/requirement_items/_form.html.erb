<%= simple_form_for(@requirement_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :category, label: t('requirement_items.form.category') %>
    <%= f.input :type_item, label: t('requirement_items.form.type_item') %>
    <%= f.input :description_item, label: t('requirement_items.form.description_item') %>
    <%= f.input :title, label: t('requirement_items.form.title') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('global.actions.submit') %>
  </div>
<% end %>
