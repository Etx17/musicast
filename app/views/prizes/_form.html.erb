<div class="mt-2">

<%= simple_form_for([@organism, @competition, @edition_competition, @category, @prize]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="container bg-light rounded-8 p-3">

      <%= f.input :title, label: t('prizes.form.title'), placeholder: t('prizes.form.title_placeholder') %>
      <%= f.input :prize_type, label: t('prizes.form.prize_type'), collection: Prize.prize_types.keys.map { |type| [t("prizes.form.prize_types.#{type}"), type] } %>
      <%= f.input :other_reward, label: t('prizes.form.other_reward'), placeholder: t('prizes.form.other_reward_placeholder'), hint: t('prizes.form.other_reward_hint') %>
      <%= f.input :description, placeholder: t('prizes.form.description_placeholder') %>
      <%= f.input :title_english, label: t('prizes.form.title_english'), placeholder: t('prizes.form.title_english_placeholder') %>
      <%= f.input :other_reward_english, label: t('prizes.form.other_reward_english'), placeholder: t('prizes.form.other_reward_english_placeholder'), hint: t('prizes.form.other_reward_english_hint') %>
      <%= f.input :description_english, placeholder: t('prizes.form.description_english_placeholder') %>
      <%= f.input :amount, label: t('prizes.form.amount'), hint: t('prizes.form.amount_hint'), placeholder: t('prizes.form.amount_placeholder') %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('prizes.form.save'), class: "btn btn-success" %>
  </div>
<% end %>
</div>
