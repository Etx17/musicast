
<%= simple_form_for(@organism) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
    <%= f.input :nom, label: "Nom de votre organisme", placeholder: "ex: Association Pavarotti, OpÃ©ra de Limoges, etc...", required: true, error: f.object.errors[:nom].to_sentence %>
    <%= f.input :description, error: f.object.errors[:description].to_sentence %>
  </div>

  <%# Logo file field input  %>
  <div class="form-group">
    <%= f.label :logo, "Logo" %>
    <%= f.file_field :logo, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enregistrer", class: "btn btn-dark" %>
  </div>


<% end %>
