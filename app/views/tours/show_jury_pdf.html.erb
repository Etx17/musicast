      <tr>
        <td style="padding: 10px; width: 50%; background: #F7F7F7;">
          <% if @detailed_program %>
            <ul style="list-item-type: none;">
              <% performance.airs.each do |air| %>
                <li style="list-item-type: none;">- <%= [air.title, air.composer, air.oeuvre, air.tonality, air.character].join(", ") %></li>
              <% end %>
            </ul>
