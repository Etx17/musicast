<div class="row p-5" >
  <% @tour.days_of_performances.sort.each do |day| %>
    <div class="col shadow-sm mx-2 bg-grey" data-controller="start-time" data-day="<%= day.strftime('%Y-%m-%d') %>">
      <%= simple_form_for :update_day, url: update_day_of_performance_and_subsequent_performances_organism_competition_edition_competition_category_tour_path(organism_id: @organism.id, competition_id: @competition.id, edition_competition_id: @edition_competition.id, category_id: @category.id, tour_id: @tour.id), method: :put, html: { class: 'edit-day-form' } do |f| %>
        <h2 class="text-center"><%= day.strftime('%a %d %B %Y') %></h2>
        <%= f.input :old_start_date, as: :hidden, input_html: { data: { start_time_target: "oldStartDate" } } %>
        <div class="d-flex">
        <%= f.input :new_start_date, hint: "Changer la date décalera toutes les suivantes", label: false, input_html: { data: { start_time_target: "newStartDate" } } %>
        <%= f.button :submit, 'Mettre a jour' %>
        </div>
      <% end %>
      <!-- Button trigger modal -->
      <div class="btn btn-light mb-2 border rounded-8 " data-controller="start-time" data-bs-toggle="modal" data-bs-target="#pauseModal" data-action="click->start-time#fetchStartTimes" data-day="<%= day %>">
         + Insérer une pause
      </div>

      <!-- Modal -->
      <div class="modal fade" id="pauseModal" tabindex="-1" aria-labelledby="pauseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="pauseModalLabel">Add Pause</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

              <p class="text-warning" >Vous ne pouvez qu'ajouter des pauses dans l'ordre chronologique. Commencez par celle du matin si vous en voulez une le matin, puis pause déjeuner, et pause dans l'après midi</p>

              <%= simple_form_for [@organism, @competition, @edition_competition, @category, @tour, Pause.new] do |f| %>
                <%= f.input :date, as: :hidden, input_html: { class: "pause_day" } %>
                <%= f.input :start_time, collection: @tour.performances.where(start_date: day).map { |p| p.start_time.strftime("%H:%M") }, label: 'Start time', input_html: { class: 'form-control' } %>
                <%= f.input :end_time, as: :time, label: 'End time', input_html: { value: '12:00' } %>
                <%= f.button :submit, 'Add Pause', class: 'btn btn-dark-outline' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- planning -->
      <table class="table ">
        <thead>
          <tr>
            <th scope="col">Candidat</th>
            <th scope="col">Heure de passage</th>
            <th scope="col">Ordre</th>
          </tr>
        </thead>
        <tbody>
          <% items = (@tour.performances.to_a + @tour.pauses.to_a).sort_by { |item| item.start_time.strftime('%H:%M') } %>

          <% items.each_with_index do |item, index| %>
            <% if item.is_a?(Performance) && item.start_date == day %>
              <%= form_with(model: item, url: performance_path(item), method: :patch, local: true) do |f| %>
                <tr>
                  <td><%= item.candidat.first_name  %></td>
                  <td><%= f.time_field :start_time, value: item&.start_time.strftime('%H:%M'), id: "start_time_#{day}_#{index}", disabled: true %></td>
                  <td><%= item.order  %></td>
                </tr>
              <% end %>
            <% elsif item.is_a?(Pause) && item.date == day %>
              <tr>
                <td>Pause</td>
                  <td id="pause_time_<%= day %>_<%= index %>"><%= item.start_time.strftime('%H:%M') %> - <%= item.end_time.strftime('%H:%M') %></td>
                <td>
                  <% last_pause_of_the_day = items.reverse.find { |i| i.is_a?(Pause) && i.date == day } %>
                  <%= button_to 'X', [@organism, @competition, @edition_competition, @category, @tour, item], method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger m-0 px-2 py-0", disabled: item != last_pause_of_the_day %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

  <% end %>

</div>
