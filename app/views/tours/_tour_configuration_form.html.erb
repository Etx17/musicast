<%= simple_form_for [@organism, @competition, @edition_competition, @category, @tour], html: { novalidate: false } do |f| %>
  <%= f.hidden_field :creating_schedule, value: "true" %>
  <div class="d-flex flex-column gap-3">
  <div class="card bg-grey shadow-sm">
    <div class="p-1 bg-light">
      <%= f.input :start_time, as: :time, hint: 'Indiquez l\'heure de début de la visite.', input_html: { value: '09:00' } %>
    </div>
  </div>

  <div class="card bg-grey shadow-sm">
    <div class="p-1 bg-light">
      <%= f.input :max_end_of_day_time, as: :time, hint: 'Indiquez l\'heure de fin maximale de la journée.', input_html: { value: '17:00' } %>
    </div>
  </div>

  <div class="card bg-grey shadow-sm">
    <div class="p-1 bg-light">
      <%= f.input :new_day_start_time, as: :time, hint: 'Si la visite s\'étend à un autre jour, vous pouvez indiquer une heure de début différente pour ce nouveau jour.', input_html: { value: '09:00' } %>
    </div>
  </div>

  <div class="card bg-grey shadow-sm">
    <div class="p-1 bg-light">
      <%= f.button :submit, 'Confirmer la configuration et générer le planning' %>
    </div>
  </div>
  </div>
<% end %>
