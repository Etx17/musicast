<%= form_with(url: store_form_data_organism_competition_edition_competition_category_tour_path(@organism, @competition, @edition_competition, @category, @tour), method: "post", local: true) do |f| %>
  <div class="mb-3">
    <p class="text-secondary"><i class="fas fa-info-circle text-primary me-1"></i><%= t('tours.planning.jury_form_description') %></p>
  </div>

  <div class="mb-3">
    <h6><%= t('tours.planning.program_options') %></h6>
    <div class="form-check form-switch">
      <%= f.check_box :detailed_program, class: "form-check-input", role: "switch", checked: session[:detailed_program], id: "switchDetailedProgram" %>
      <%= f.label :detailed_program, t('tours.planning.detailed_program'), class: "form-check-label", for: "switchDetailedProgram" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :simple_air, class: "form-check-input", role: "switch", checked: session[:simple_air], id: "switchSimpleAir" %>
      <%= f.label :simple_air, t('tours.planning.simple_air'), class: "form-check-label", for: "switchSimpleAir" %>
    </div>
  </div>

  <div class="mb-3">
    <h6><%= t('tours.planning.biography_options') %></h6>
    <div class="form-check form-switch">
      <%= f.check_box :short_bio, class: "form-check-input", role: "switch", checked: session[:short_bio], id: "switchShortBio" %>
      <%= f.label :short_bio, t('tours.planning.short_bio'), class: "form-check-label", for: "switchShortBio" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :medium_bio, class: "form-check-input", role: "switch", checked: session[:medium_bio], id: "switchMediumBio" %>
      <%= f.label :medium_bio, t('tours.planning.medium_bio'), class: "form-check-label", for: "switchMediumBio" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :long_bio, class: "form-check-input", role: "switch", checked: session[:long_bio], id: "switchLongBio" %>
      <%= f.label :long_bio, t('tours.planning.long_bio'), class: "form-check-label", for: "switchLongBio" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :short_bio_en, class: "form-check-input", role: "switch", checked: session[:short_bio_en], id: "switchShortBioEn" %>
      <%= f.label :short_bio_en, t('tours.planning.short_bio_en'), class: "form-check-label", for: "switchShortBioEn" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :medium_bio_en, class: "form-check-input", role: "switch", checked: session[:medium_bio_en], id: "switchMediumBioEn" %>
      <%= f.label :medium_bio_en, t('tours.planning.medium_bio_en'), class: "form-check-label", for: "switchMediumBioEn" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :long_bio_en, class: "form-check-input", role: "switch", checked: session[:long_bio_en], id: "switchLongBioEn" %>
      <%= f.label :long_bio_en, t('tours.planning.long_bio_en'), class: "form-check-label", for: "switchLongBioEn" %>
    </div>
  </div>

  <div class="mb-3">
    <h6><%= t('tours.planning.candidate_information') %></h6>
    <div class="form-check form-switch">
      <%= f.check_box :full_name, class: "form-check-input", role: "switch", checked: session[:full_name] || true, id: "switchFullName" %>
      <%= f.label :full_name, t('tours.planning.full_name'), class: "form-check-label", for: "switchFullName" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :nationality, class: "form-check-input", role: "switch", checked: session[:nationality] || true, id: "switchNationality" %>
      <%= f.label :nationality, t('tours.planning.nationality'), class: "form-check-label", for: "switchNationality" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :birth_date, class: "form-check-input", role: "switch", checked: session[:birth_date], id: "switchBirthDate" %>
      <%= f.label :birth_date, t('tours.planning.birth_date'), class: "form-check-label", for: "switchBirthDate" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :voice_type, class: "form-check-input", role: "switch", checked: session[:voice_type] || true, id: "switchVoiceType" %>
      <%= f.label :voice_type, t('tours.planning.voice_type'), class: "form-check-label", for: "switchVoiceType" %>
    </div>
  </div>

  <div class="mb-3">
    <h6><%= t('tours.planning.photo_options') %></h6>
    <div class="form-check form-switch">
      <%= f.check_box :profile_photo, class: "form-check-input", role: "switch", checked: session[:profile_photo], id: "switchProfilePhoto" %>
      <%= f.label :profile_photo, t('tours.planning.profile_photo'), class: "form-check-label", for: "switchProfilePhoto" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :artistic_photo, class: "form-check-input", role: "switch", checked: session[:artistic_photo], id: "switchArtisticPhoto" %>
      <%= f.label :artistic_photo, t('tours.planning.artistic_photo'), class: "form-check-label", for: "switchArtisticPhoto" %>
    </div>
  </div>

  <div class="mb-3">
    <h6><%= t('tours.planning.additional_options') %></h6>
    <div class="form-check form-switch">
      <%= f.check_box :notes_space, class: "form-check-input", role: "switch", checked: session[:notes_space] || true, id: "switchNotesSpace" %>
      <%= f.label :notes_space, t('tours.planning.notes_space'), class: "form-check-label", for: "switchNotesSpace" %>
    </div>
    <div class="form-check form-switch">
      <%= f.check_box :order_of_passage, class: "form-check-input", role: "switch", checked: session[:order_of_passage] || true, id: "switchOrderOfPassage" %>
      <%= f.label :order_of_passage, t('tours.planning.order_of_passage'), class: "form-check-label", for: "switchOrderOfPassage" %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-4">
    <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal"><%= t('global.actions.cancel') %></button>
    <%= f.submit t('global.actions.save'), class: "btn btn-primary" %>
  </div>
<% end %>
