<div class="container py-4">
  <div class="row">
    <div class="col-12">

      <%= simple_form_for [@organism, @competition, @edition_competition, @category, @tour],
                          url: update_solo_warmup_organism_competition_edition_competition_category_tour_path(@organism, @competition, @edition_competition, @category, @tour),
                          method: :patch do |f| %>

        <h3 class="mb-4">Configuration des répétitions (Salle de chauffe)</h3>
        <div class="card mb-4 bg-light">
          <div class="card-body">
            <%= f.input :rehearse_time_slot_per_candidate,
                      input_html: { style: "width: fit-content;" },
                      label: "Durée d'un créneau (en minutes)",
                      hint: "Définit la durée de chaque créneau de répétition" %>

            <%= f.input :buffer_time_minutes,
                      input_html: { style: "width: fit-content;" },
                      label: "Temps tampon avant performance (minutes)",
                      hint: "Temps nécessaire entre la fin de la répétition et le début de la performance" %>
            <% if @organism.rooms.exists? %>
              <div class="d-flex align-items-center mb-3">
                <div class="flex-grow-1">
                  <%= f.association :rooms,
                                  collection: @organism.rooms,
                                  label: "Sélectionnez les salles disponibles",
                                  input_html: { data: { controller: "tom-select" } },
                                  hint: "Sélectionnez une ou plusieurs salles de répétitions pour dispatcher les candidats avant leur performance" %>
                </div>
                <div class="ms-3 mt-4">
                  <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newRoomModal">
                    <i class="fas fa-plus"></i> Créer une salle
                  </button>
                </div>
              </div>
            <% else %>
              <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Vous n'avez pas encore enregistré de salles.
                <%= link_to "Ajoutez des salles dans votre espace organisation", organisateur_dashboard_path, class: "alert-link" %> pour commencer.
              </div>
              <div class="text-center mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newRoomModal">
                  <i class="fas fa-plus"></i> Créer une salle
                </button>
              </div>
            <% end %>
        <%= f.submit "Enregistrer la configuration et générer le planning de répétition", class: "btn btn-primary ", style: "width: fit-content;" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<!-- Modal pour créer une salle -->
<div class="modal fade" id="newRoomModal" tabindex="-1" aria-labelledby="newRoomModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newRoomModalLabel">Ajouter une salle</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@organism, Room.new]) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, label: "Nom de la salle" %>
            <%= f.input :notes, label: "Notes" %>
            <%= f.input :organism_id, as: :hidden, input_html: { value: @organism.id } %>

            <!-- Hidden field for redirect path back to current page -->
            <input type="hidden" name="redirect_path" value="<%= request.fullpath %>" />

            <div class="row">
              <div class="col">
                <%= f.input :start_time, label: "Heure d'ouverture" %>
              </div>
              <div class="col">
                <%= f.input :end_time, label: "Heure de fermeture" %>
              </div>
            </div>

            <%= f.input :description, label: "Description" %>
            <%= f.input :description_english, label: "Description (Anglais)" %>
          </div>

          <div class="form-actions text-center">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.button :submit, "Créer", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
