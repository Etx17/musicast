<%= render Table::BaseComponent.new(
  rows: @edition_competitions,
  columns: [
    {
      label: "Organisme",
      value: ->(edition_competition) { edition_competition.competition.organism.nom }
    },
    {
      label: "Nom de la compétition",
      value: ->(edition_competition) { edition_competition.competition.nom_concours }
    },
    {
      label: "Organisateur",
      value: ->(edition_competition) { edition_competition.competition.organisateur.user.name_and_email.split(' - ').first }
    },
    {
      label: "Statut",
      value: ->(edition_competition) { edition_competition.status }
    }
  ],
  client: nil,
  links: [
  ],
  empty_message: "Aucune édition de compétition trouvée"
) %>
