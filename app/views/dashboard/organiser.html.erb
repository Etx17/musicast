<div class="container mt-5">
  <h1 class="text-center" style='font-size: 6em;'>Tableau de Bord</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded">
        <div class="card-body">
          <h1 class="mb-4">Vos concours</h1>
          <div class="list-group">
            <% @competitions.each do |competition| %>
              <%= link_to competition_path(competition) do %>
                <div class="card" style="width: 100%; height: 300px; background-image: url('https://source.unsplash.com/random/?applications/300/200'); background-size: cover;">
                  <div class="card-img-overlay d-flex justify-content-center align-items-center" style="background-color: rgba(0, 0, 0, 0.5);">
                    <h2 class="card-title text-white" style="font-size: 3em;"><%= competition.nom_concours %></h1>
                  </div>
                </div>
              <% end %>

            <% end %>
          </div>
          <%= link_to 'Créer une compétition', new_competition_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded mb-4">
        <div class="card-body">
          <h2 class="mb-4">Informations de l'organisme</h2>
          <p><strong>Nom:</strong> <%= @organism.nom %></p>
          <p><strong>Description:</strong> <%= @organism.description %></p>
          <!-- Add more organism information here -->
        </div>
      </div>
    </div>
  </div>
</div>
