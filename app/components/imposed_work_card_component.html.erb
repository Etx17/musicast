<div class="card mb-3 rounded-8">
  <div class="card-header">  Oeuvres impos√©es: <span class="h5 ps-2"> <%= @category.imposed_work.airs.count %></span></div>
  <div class="card-body bg-light rounded-8">
    <ul class="list-group list-group-flush">
      <div><%= @category.imposed_work.title %></div>
      <div class="text-english"><%= @category.imposed_work.title_english %></div>
      <small class="text-secondary"><%= @category.imposed_work.guidelines %></small>
      <small class="text-english"><%= @category.imposed_work.guidelines_english %></small>
      <li class="list-group-item d-flex flex-column bg-white">
        <% @category.imposed_work.airs.each do |air| %>
          <span> <i class="fas fa-feather text-secondary pe-2 small"></i><%= air.title %> - <%= air.composer %> - <%= air.oeuvre %> - <%= air.tonality %></span>
          <small class="text-secondary"> <%= air.infos %> </small>
          <small class="text-english"> <%= air.infos_english %> </small>
        <% end %>
      </li>
    </ul>
  </div>
</div>
