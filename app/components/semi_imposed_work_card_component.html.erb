<div class="card mb-3 bg-white rounded-8 border">
  <div class="card-header bg-primary text-white py-3">
    <div class="d-flex align-items-center">
      <h5 class="mb-0 fw-bold">
        <%= t('semi_imposed_works.card.present') %>
        <span class="badge bg-white text-primary mx-2 px-3" style="font-size: 1.1rem;">
          <%= @semi_imposed_work.number %>
        </span>
        <%= t('semi_imposed_works.card.works') %>
      </h5>
    </div>
  </div>

  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5 class="card-title mb-0 text-primary"><%= @title %></h5>

      <div class="d-flex gap-2">
        <!-- Badge pour le nombre d'œuvres -->
        <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">
          <i class="fas fa-list-ol me-1"></i>
          <%= @semi_imposed_work.number %> <%= t('semi_imposed_works.card.works') %>
        </span>

        <!-- Badge pour la durée maximale -->
        <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">
          <i class="fas fa-clock me-1"></i>
          Max: <%= @semi_imposed_work.max_length_minutes %> <%= t('semi_imposed_works.card.min_max_total') %>
        </span>
      </div>
    </div>

    <div class="bg-light p-3  mb-4 border-start border-4 border-primary">
      <div class="d-flex">
        <i class="fas fa-info-circle text-primary mt-1 me-3" style="font-size: 1.2rem;"></i>
        <p class="mb-0" style="font-size: 1rem;"><%= @guidelines %></p>
      </div>
    </div>
  </div>
</div>
